@{
    Layout = "_AdminPanel"; // Spécifie un layout différent pour le backoffice
}

@model IEnumerable<library.Models.Blog>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1>Index</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contenu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contenu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        <img src="~/images/@item.ImageUrl" class="img-thumbnail">
                        
                    </td>
                    <td>
                        <a class="btn btn-warning m-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-info m-2" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger m-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
