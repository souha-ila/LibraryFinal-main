@model library.Models.Livre
@{
    Layout = "_AdminPanel"; // Spécifie un layout différent pour le backoffice
}
<div class="container">
    <h1>Détails du Livre</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="/images/@Model.ImageUrl" alt="Image du livre" class="img-fluid" />
        </div>
        <div class="col-md-6">
            <h2>@Model.Titre</h2>
            <p><strong>Auteur:</strong> @Model.Auteur</p>
            <p><strong>Résumé:</strong> @Model.Resume</p>

        </div>
    </div>


</div>
