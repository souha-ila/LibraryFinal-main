@{
    Layout = "_AdminPanel"; // Spécifie un layout différent pour le backoffice
}

@model library.Models.Abonne

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Add your vintage button style here */
    .vintage-button {
        background-color: #e0c9a6;
        color: #4c4c4c;
        padding: 8px 16px;
        text-decoration: none;
        border: 1px solid #4c4c4c;
        border-radius: 4px;
        display: inline-block;
        transition: background-color 0.3s;
    }

        .vintage-button:hover {
            background-color: #4c4c4c;
            color: #e0c9a6;
        }
</style>

<h1>Create</h1>

<h4>Abonne</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary vintage-button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="vintage-button">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
